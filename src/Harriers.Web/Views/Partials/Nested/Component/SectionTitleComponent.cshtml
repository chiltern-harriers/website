@inherits Umbraco.Web.Mvc.UmbracoViewPage<TitleComponent>
@using Umbraco.Web.PublishedModels
@using Harriers.Web.Extensions


@if (Model.Title.HasValue())
{
    <h2 class="title is-size-4">@Model.Title</h2>
}   
@if (Model.Subtitle.HasValue())
{
    <div class="subtitle is-size-6">@Model.Subtitle</div>
}